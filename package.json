{
  "name": "LizGoban",
  "version": "0.1.0-pre1.1",
  "description": "An analysis tool of the game Go with Leela Zero and KataGo",
  "author": "kaorahi <khi@users.osdn.me>",
  "license": "GPL-3.0",
  "main": "./src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaorahi/lizgoban"
  },
  "dependencies": {
    "@sabaki/sgf": "^3.4.1",
    "electron-store": "^5.1.0",
    "tmp": "^0.1.0"
  },
  "devDependencies": {
    "electron": "^4.2.12",
    "electron-builder": "^22.1.0"
  },
  "build": {
    "files": [
      "src/{*.js,*.html,*.png}"
    ],
    "extraFiles": [
      {
        "from": "tmp_extra",
        "to": "resources/external",
        "filter": [
          "network.gz"
        ]
      }
    ],
    "linux": {
      "target": "AppImage",
      "category": "Game",
      "extraFiles": [
        {
          "from": "tmp_extra/linux",
          "to": "resources/external"
        }
      ]
    },
    "win": {
      "target": "portable",
      "extraFiles": [
        {
          "from": "tmp_extra/win",
          "to": "resources/external",
          "filter": [
            "leelaz.exe",
            "*.dll"
          ]
        }
      ]
    }
  },
  "scripts": {
    "start": "electron .",
    "build_lin": "electron-builder -l --x64",
    "build_win": "electron-builder -w --x64"
  }
}
